{
  "compilerOptions": {
    "target": "ES6",
    "diagnostics": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "lib": ["es5", "es6", "es2017", "dom"],
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",

    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,

    "typeRoots": ["./types", "./node_modules/@types"],
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "./types", "src/main.spec.ts", "src/main.it"]
}
