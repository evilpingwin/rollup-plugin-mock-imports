{
  "compilerOptions": {
    "target": "es6",
    "diagnostics": true,
    "noImplicitThis": true,
    // "noEmitOnError": true,
    "allowJs": true,
    "lib": ["es5", "es6", "dom"],
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
