{
  "compilerOptions": {
    "target": "es6",
    "diagnostics": true,
    "noImplicitThis": true,
    "lib": ["es5", "es6", "es7", "dom"],
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "./types", "src/main.spec.ts", "src/main.it"]
}
